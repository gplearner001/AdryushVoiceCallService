# Server Configuration
PORT=3001
NODE_ENV=development

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_SIP_DOMAIN=your_sip_domain

# AssemblyAI Configuration
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key

# PipeCat Configuration (if applicable)
PIPECAT_API_KEY=your_pipecat_api_key
PIPECAT_ENDPOINT=https://api.pipecat.ai

# Webhook Configuration (for production)
WEBHOOK_BASE_URL=https://your-render-app.onrender.com
# For development with ngrok: NGROK_URL=https://your-ngrok-url.ngrok.io

# Security
JWT_SECRET=your_jwt_secret_key
API_KEY=your_api_key_for_authentication

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app